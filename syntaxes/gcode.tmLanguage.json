{
    "scopeName": "source.gcode",
    "name": "CNC Milling G-Code Snippet",
    "patterns": [
        {
            "include": "#warnning"
        },
        {
            "include": "#speedsfeeds"
        },
        {
            "include": "#prognumbers"
        },
        {
            "include": "#coords"
        },
        {
            "include": "#tools"
        },
        {
            "include": "#modifiers"
        },
        {
            "include": "#macrovars"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "warnning": {
            "patterns": [
                {
                    "name": "invalid.gcode",
                    "match": "G00"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b[gG][0-9]{1,3}",
                    "name": "markup.bold.gcode"
                },
                {
                    "match": "\\b[mM][0-9]{1,3}",
                    "name": "keyword.operator.quantifier.regexp.gcode"
                },
                {
                    "match": "([\\%])",
                    "name": "string.gcode"
                },
                {
                    "match": "(GOTO)|(IF)|(EQ)|(NE)|(LT)|(GT)|(LE)|(GE)|(DO)|(WHILE)|(END)|(AND)|(OR)|(XOR)",
                    "name": "keyword.control.gcode"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "match": "(SIN)|(COS)|(TAN)|(ASIN)|(ACOS)|(ATAN)|(LN)|(SQRT)|(MOD)|(EXP)",
                    "name": "support.constant.math.gcode"
                },
                {
                    "match": "(FIX)|(FUP)|(ROUND)|(ABS)",
                    "name": "support.constant.math.gcode"
                },
                {
                    "match": "(\\+)|(\\*)|(\\/)|(\\*\\*)",
                    "name": "support.constant.math.gcode"
                },
                {
                    "match": "(\\-)",
                    "name": "invalid.gcode"
                }
            ]
        },
        "speedsfeeds": {
            "patterns": [
                {
                    "match": "\\b[sS][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                },
                {
                    "match": "\\b[fF][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                }
            ]
        },
        "prognumbers": {
            "patterns": [
                {
                    "match": "\\b[pP][0-9]{1,5}",
                    "name": "string.regexp.gcode"
                }
            ]
        },
        "coords": {
            "patterns": [
                {
                    "match": "\\b[xX][+-]?\\d*[.]?\\d*",
                    "name": "string.gcode"
                },
                {
                    "match": "\\b[yY][+-]?\\d*[.]?\\d*",
                    "name": "string.gcode"
                },
                {
                    "match": "\\b[zZ][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                },
                {
                    "match": "\\b[aAbBcC][+-]?\\d*[.]?\\d*",
                    "name": "constant.character.escape.gcode"
                }
            ]
        },
        "tools": {
            "patterns": [
                {
                    "match": "\\b[dD][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                },
                {
                    "match": "\\b[hH][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                },
                {
                    "match": "\\b[tT][+-]?\\d*[.]?\\d*",
                    "name": "invalid.gcode"
                }
            ]
        },
        "modifiers": {
            "patterns": [
                {
                    "match": "\\b[iIjJkK][+-]?\\d*[.]?\\d*",
                    "name": "constant.character.escape.gcode"
                },
                {
                    "match": "\\b[qQrRlL][+-]?\\d*[.]?\\d*",
                    "name": "support.constant.math.gcode"
                }
            ]
        },
        "macrovars": {
            "patterns": [
                {
                    "match": "[#][0-9]+",
                    "name": "invalid.gcode"
                },
                {
                    "match": "#([\\[]#?[\\d]*\\.?[\\d]*([\\+\\-]#?[\\d]*\\.?[\\d]*)*[\\]])",
                    "name": "invalid.gcode"
                }

            ]
        }
    }

}